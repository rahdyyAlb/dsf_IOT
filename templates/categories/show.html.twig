{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">

        <div class="text-center align-items-center justify-content-center">

            <div class="card card-body text-center align-items-center justify-content-center width-80">
                <h1 class="m-2 pb-3 text-center">Info sur la catégorie</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom de la catégorie</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="align-items-center justify-content-between align-self-center">
                    <a class="btn btn-warning btn-small mt-1"
                       href="{{ path('app_categories_edit', {'id': category.id}) }}">Editer</a>
                    {{ include('categories/_delete_form.html.twig') }}
                    <a class="btn btn-secondary btn-small mt-3" href="{{ path('app_categories_index') }}">Retour</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
