{% extends 'base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">

        <div class="text-center align-items-center justify-content-center">

            <div class="card card-body text-center align-items-center justify-content-center width-80">
                <h1>Produits de la transaction n°{{ transaction.id }}</h1>

                <table>
                    <thead>
                    <tr>
                        <th>Nom du produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in transaction.products %}
                        <tr>
                            <td>
                                <img src="{{ asset('build/images/'  ~ product.img) }}" class="w-25" alt="{{ product.img }}">
                            </td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ transaction.id }}</td>
                    </tr>
                    <tr>
                        <th>Date de la transaction</th>
                        <td>{{ transaction.transactionsDate ? transaction.transactionsDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Montant total</th>
                        <td>{{ transaction.totalAmount }}</td>
                    </tr>

                    </tbody>
                </table>

                <div class="align-items-center justify-content-between align-self-center">
                    <a class="btn btn-secondary btn-small mt-3"
                       href="{{ path('app_transactions_edit', {'id': transaction.id}) }}">Editer</a>
                    {{ include('transactions/_delete_form.html.twig') }}
                    <a class="btn btn-warning btn-small mt-1" href="{{ path('app_transactions_index') }}">Retour</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
