{% extends 'base.html.twig' %}

{% block title %}TransactionIteme index{% endblock %}

{% block body %}
<div class="d-flex justify-content-end">
    {% include 'sidebar.html.twig' %}
    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">
  <div class="col-lg-8 col-md-6 mb-md-0 mb-4 centered width-80 text-center align-items-center justify-content-center">
    <div class="card width-80">
      <div class="card-header pb-0">
        <div class="row">
          <div>
            <h1>Index objet transaction</h1>
          </div>

          <div class="col-lg-6 col-5 my-auto text-end">
            <div class="dropdown float-lg-end pe-4">
              <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-ellipsis-v text-secondary"></i>
              </a>
              <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                <li><a class="dropdown-item border-radius-md" href="javascript:;">Action</a></li>
                <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

            <div class="card-body px-0 pb-2">
                <div class="table-responsive">
                <table class="table align-items-center mb-0">
                    <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Quantité</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for transaction_iteme in transaction_itemes %}
                    <tr>
                        <td>
                        <div class="d-flex px-2 py-1">
                        <div>
                            <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm"> {{ transaction_iteme.id }}</h6>
                            </div>
                        </div>
                    </td>

                        <td class="align-middle text-center text-sm">
                            <span class="text-xs font-weight-bold"> {{ transaction_iteme.quantity }} </span>
                        </td>

                        <td class="align-middle text-center text-sm">
                            <span class="text-xs font-weight-bold"> {{ transaction_iteme.total }} </span>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <a class="btn btn-dark btn-small" href="{{ path('app_transaction_iteme_show', {'id': transaction_iteme.id}) }}">show</a>
                            <a class="btn btn-info btn-small" href="{{ path('app_transaction_iteme_edit', {'id': transaction_iteme.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun objet trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-success" href="{{ path('app_transaction_iteme_new') }}">Create new</a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
{% endblock %}
