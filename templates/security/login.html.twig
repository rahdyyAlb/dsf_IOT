{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="text-center d-flex align-items-center justify-content-center align-middle height-100">

    <div class="text-center align-items-center justify-content-center">

        <div class ="card card-body text-center align-items-center justify-content-center width-40">

            <form method="post" class="form-signin">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en temps que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnection</a>
                    </div>
                {% endif %}
                <img class="mb-5 img-logo" src="{{ asset('build/images/logo.png') }}" alt="logo">

                <h1 class="h3 mb-4 font-weight-normal">CONNECTER-VOUS</h1>
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-2" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                
                <div class="text-center d-flex align-items-center justify-content-center align-middle flex-column">

                    <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">
                        Se connecter
                    </button>
                    <label class="mt-4 small">Vous n'avez pas de compte ? <a href="/register">S'enregister</a></label>
                </div>
            </form>

        </div>
    </div>
</div>

{% endblock %}
