{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">

        <div class="text-center align-items-center justify-content-center">

            <div class="card card-body text-center align-items-center justify-content-center width-80">
                <h1 class="m-2 pb-3 text-center">Détail de l'utilisateur</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ user.adress }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="align-items-center justify-content-between align-self-center">
                    <a class="btn btn-secondary btn-small mt-3" href="{{ path('app_user_index') }}">Retour</a>
                    {{ include('user/_delete_form.html.twig') }}
                    <a class="btn btn-warning btn-small mt-1"
                       href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
