{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">

        <div class="text-center align-items-center justify-content-center">

            <div class="card card-body text-center align-items-center justify-content-center width-80">

                <h1 class="m-2 pb-3 text-center">Info sur le produits</h1>
                <img src="{{ asset('build/images/'  ~ product.img) }}" class="navbar-brand-img w-25" alt="main_logo">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Quantit√© en stock</th>
                        <td>{{ product.stockQuantity }}</td>
                    </tr>
                    <tr>
                        <th>Code bare</th>
                        <td>{{ product.barCode }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="align-items-center justify-content-between align-self-center">
                    <a class="btn btn-warning btn-small mt-1"
                       href="{{ path('app_products_edit', {'id': product.id}) }}">Editer</a>
                    {{ include('products/_delete_form.html.twig') }}
                    <a class="btn btn-secondary btn-small mt-3" href="{{ path('app_products_index') }}">Retour</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
