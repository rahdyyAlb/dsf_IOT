{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}

    <div class="text-center d-flex align-items-center justify-content-center align-middle centered">

        <div class="text-center align-items-center justify-content-center">

            <div class="card card-body text-center align-items-center justify-content-center width-80">

                <h1 class="m-2 pb-3 text-center">Client</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ customer.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ customer.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ customer.email }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ customer.phone }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ customer.address }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex align-items-center justify-content-around align-self-center m-2">
                    <a class="btn btn-warning btn-small mt-1 m-2"
                       href="{{ path('app_customers_edit', {'id': customer.id}) }}">Editer</a>
                    {{ include('customers/_delete_form.html.twig') }}
                    <a class="btn btn-secondary btn-small m-2" href="{{ path('app_customers_index') }}">Retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
